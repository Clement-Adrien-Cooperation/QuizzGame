generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:!xJeLth!P4!psnjT@localhost:5432/quizzdb?schema=public"
}

model User {
  id            String    @id @unique
  pseudo        String    @unique
  email         String    @unique
  password      String
  is_admin      Boolean   @default(false)
  is_banished   Boolean   @default(false)
  reported      Boolean   @default(false)
  reportMessage String[]
}

model Quiz {
  id            String      @id @unique
  user_id       String
  creator       String
  title         String      @unique
  nbOfQuestions Int
  category      String
  difficulty    String
  is_visible    Boolean     @default(true)
  date          String
  rate          Int
  reported      Boolean     @default(false)
  reportMessage String[]
}

model Question {
  id            String    @id @unique
  user_id       String
  quiz_id       String
  question      String
  description   String
  proposals     String[]
  answer        String
  reported      Boolean   @default(false)
  reportMessage String[]
}

model Comment {
  id            String    @id @unique
  user_id       String
  quiz_id       String
  author        String
  content       String
  likes         Int
  reported      Boolean   @default(false)
  reportMessage String[]
}