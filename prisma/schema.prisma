generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:!xJeLth!P4!psnjT@localhost:5432/quizzdb?schema=public"
}

model User {
  id            String    @id
  pseudo        String    @unique
  email         String    @unique
  password      String
  avatar        String?
  is_admin      Boolean   @default(false)
  is_banished   Boolean   @default(false)
  reported      Boolean   @default(false)
  reportMessage String[]
  quizz         Quizz[]
  comment       Comment[]
}

model Quizz {
  id            String    @id
  user          User      @relation(fields: [user_id], references: [id])
  user_id       String       
  creator       String
  title         String    @unique
  nbOfQuestions Int
  category      String?
  difficulty    String?
  lang          String?
  image         String?
  is_visible    Boolean?   @default(true)
  date          String
  rate          Int?
  reported      Boolean    @default(false)
  reportMessage String[]
  questions     Question[]
  comments      Comment[]
}

model Question {
  id            String    @id
  quizz         Quizz     @relation(fields: [quizz_id], references: [id])
  quizz_id      String
  question      String
  description   String?
  proposals     String[]
  answer        String
  reported      Boolean   @default(false)
  reportMessage String[]
}

model Comment {
  id            String    @id
  user          User      @relation(fields: [user_id], references: [id])
  user_id       String       
  author        String
  quizz         Quizz     @relation(fields: [quizz_id], references: [id])
  quizz_id      String       
  content       String
  reported      Boolean   @default(false)
  reportMessage String[]
}