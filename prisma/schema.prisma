// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

model User {
  id            String    @id @unique
  pseudo        String    @unique
  email         String    @unique
  password      String
  is_admin      Boolean   @default(false)
  is_banished   Boolean   @default(false)
  reported      Boolean   @default(false)
}

model Quiz {
  id            String      @id @unique
  user_id       String
  creator       String
  title         String      @unique
  nbOfQuestions Int
  category      String
  difficulty    String
  date          String
  rate          Int
  nbOfRates     Int
  is_visible    Boolean     @default(true)
  reported      Boolean     @default(false)
}

model Question {
  id            String    @id @unique
  user_id       String
  quiz_id       String
  question      String
  description   String
  proposals     String[]
  answer        String
  reported      Boolean   @default(false)
}

model Comment {
  id            String    @id @unique
  user_id       String
  quiz_id       String
  author        String
  content       String
  likes         Int
  reported      Boolean   @default(false)
}

model Report {
  id            String    @id @unique
  pseudo        String
  about         String
  about_id      String
  title         String
  message       String
  date          String
}

model Category {
  id            Int       @id @default(autoincrement())
  name          String    @unique
}

model Played {
  id            String    @id @unique
  user_id       String
  quiz_id      String
  score         Int
  date          String
}